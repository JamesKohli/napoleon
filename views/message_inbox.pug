//- vim:ts=4:sw=4:
doctype html
html
	head
		include head
		title Inbox
		style.
			a.unread { color: blue }
			a.read { color: purple }
			td a { display: block }
			@media (max-width: 400px) {
			td:nth-child(3) { display: none }
			th:nth-child(3) { display: none }
			}
	body
		include header
		article
			h1 Inbox

			p
				a(href="/message/send") Send message

			table.wide.striped
				thead
					tr
						th From
						th Subject
						th Date
				tbody
					each row in messages
						- let subject = row.subject
						- if (subject.length > 50) subject = subject.substring(0,40) + "..."
						tr
							td: a.black(href="/user/"+row.from_name)= row.from_name
							if row.is_read
								td: a.read(href="/message/read/"+row.message_id)= subject
							else
								td: a.unread(href="/message/read/"+row.message_id)= subject
							td.w= human_date(row.time)
					else
						tr
							td(colspan=3) No messages.

			p
				a(href="/message/outbox") Outbox
